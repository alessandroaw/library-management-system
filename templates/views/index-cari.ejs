    <!-- main header area start -->
    <div class="mainheader-area py-3">
      <div class="container">
        <div class="row">
          <a href="/"><h1>Library Management System</h1></a>
        </div>
      </div>
    </div>
    <!-- main header area end -->
    <!-- header area start -->
    <div class="header-area header-bottom">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-12  d-none d-lg-block">
            <div class="card text-center">
              <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                  <li class="nav-item col-sm-12">
                    <a class="nav-link active" href="#">Koleksi Pustaka</a>
                  </li>
                </ul>
              </div>
              <div class="card-body">
                <h5 class="card-title">Cari buku</h5>
                <p class="card-text">Masukkan kata kunci dari buku yang ingin dicari</p>
                <!-- nav and search button -->
                <div class="col-lg-auto clearfix pt-4">
                  <div class="search-box pb-5">
                    <form>  <!--ganti action ke post -->

                      <input  type="text" placeholder="Masukkan kata kunci" style="text-align:center">
                      <!-- <button>search</button> -->
                      <!-- <i class="ti-search"></i> -->
                    </form>
                  </div>
                </div>

                <!--coba buat menampilkan hasil search-->
 
                
                <!-- <table id="search-result" class="table table-striped" >   -->
                  <div class="container" id="search-result">
                  <script id="template" type="html">
                      {{#books}}
                      {{#.}}   
                    <div class="row justify-content-sm-center">
                          <div class="col-sm-1">
                            <img src="{{image}}", alt="cover buku">
                          </div>
                          <div class="col-sm-6 text-left">
                            <p><a href="/book/{{_id}}">{{title}}</a></p>
                            <p>{{author}}</p>
                            <p>{{published}}</p>
                            <p>{{category}}</p>
                          </div>
                        </div>
                        <hr>
                        {{/.}}
                        {{/books}}
                        
                  </script>
                </div>
                
              </div>
            </div>
          </div>
          
        </div>

        <!-- mobile_menu -->
        <div class="col-12 d-block d-lg-none">
          <div id="mobile_menu"></div>
        </div>

