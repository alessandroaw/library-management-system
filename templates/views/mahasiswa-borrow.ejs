<body class="body-bg">
  <!--[if lt IE 8]>
  <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
  <![endif]-->
  <!-- preloader area start -->
  <div id="preloader">
    <div class="loader"></div>
  </div>
  <!-- preloader area end -->
  <!-- main wrapper start -->
  <div class="horizontal-main-wrapper">
    <!-- main header area start -->
    <%- include('../partials/header-mahasiswa') %>
    <!-- main header area end -->
    <!-- header area start -->
    <div class="header-area header-bottom">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-12  d-none d-lg-block">
            <div class="card text-center">
              <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                  <li class="nav-item col-sm-4">
                    <a class="nav-link active" href="/mahasiswa/borrow">Peminjaman</a>
                  </li>
                  <li class="nav-item col-sm-4">
                    <a class="nav-link" href="/mahasiswa/return">Pengembalian</a>
                  </li>
                  <li class="nav-item col-sm-4">
                    <a class="nav-link" href="/mahasiswa/recommendation">Rekomendasi</a>
                  </li>
                </ul>
              </div>
              <div class="card-body">
                <h5 class="card-title">Peminjaman</h5>
                <p class="card-text">Silahkan scan Barcode buku.</p>
                <!-- nav and search button -->
                <div class="col-lg-auto clearfix pt-4">

                  <div style="display: block; width: 400px; margin: 0 auto;">
                      <div id="barcode">
                        <video id="barcodevideo" autoplay></video>
                        <canvas id="barcodecanvasg"></canvas>
                        <canvas id="barcodecanvas"></canvas>
                      </div>
                  </div>
                  <hr>
                  <center>
                    <!-- <form> -->
                    <!-- <div class="form-group">
                        <label for="inputAddress2">Scan Barcode</label>
                        <input type="text" readonly class="form-control w-75" id="inputAddress2" placeholder="Scan Book Barcode" style="text-align:center; background-color: #666666;">
                      </div> -->
                    <div class="row">
                      <div class="col-md-12">Scan Barcode</div>
                    </div>
                    <div class="row">
                      <div class="col-md-12" id="result">
                        Barcode Read
                      </div>
                    </div>
                    <button id="barcode-button" class="btn btn-primary btn-xs">Tambah Buku</button>
                    <hr>
                    <form>

                      <div id="book-result" class="table table-striped">
                        <script id="template" type="html">
                              <table class="table table-striped" >  
                                <thead>
                                  <tr>
                                    <th class="align-self-center" style="width:10%">Check</th>
                                    <th class="align-self-center" style="width:25%">ISBN</th>
                                    <th class="align-self-center" style="width:40%">Judul</th>
                                    <th class="align-self-center" style="width:25%">Kategori</th>
                                  </tr>
                                </thead>
                                <tbody>
                                  {{#books}}
                                    {{#.}}
                                    <tr>
                                      <td class="checkbox checkbox-primary align-self-center">
                                        <input type="checkbox" name="checkedBooks" class="styled styled-primary" id="singleCheckbox2" value={{_id}} checked aria-label="Single checkbox Two">
                                          <label></label>
                                      </td>
                                      <td class="align-self-center">{{isbn}}</td>
                                      <td class="align-self-center">{{title}}</td>
                                      <td class="align-self-center">{{category}}</td>
                                    </tr>
                                    {{/.}}
                                    {{/books}}
                                  </tbody>
                            
                                </table>
                                <button id="submit-button" type="submit" class="btn btn-primary" formaction="/borrow/api/br" formmethod="POST">Pinjam</button>
                          </script>
                      </div>

                    </form>
                    <!-- </form> -->
                  </center>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- header area end -->
    <!-- page title area end -->

    <!-- footer area start-->
    <%- include('../partials/footer') %>
    <!-- footer area end-->
  </div>
